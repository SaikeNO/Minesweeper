<Window x:Class="Minesweeper.GUI.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over" Height="200" Width="400">
    <Grid>
        <TextBlock x:Name="GameOverMessage" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
        <Button Content="Restart" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10" Width="100" Click="RestartButton_Click"/>
    </Grid>
</Window>